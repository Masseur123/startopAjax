{% extends 'base.html.twig' %}

{% block title %}{{ 'page.title.transit_expense'|trans([],'transit') }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block page_header_content_page_title %}
    <div class="page-title d-flex">
        <h3><i class="icon-arrow-left52 mr-2"></i> <span class="font-weight-bold">{{ 'transit_expense'|trans([],'transit') }}</span></h3>
		<a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
    </div>
{% endblock %}

{% block page_header_content_header_elements_button %}
	<div class="header-elements d-none">
		<a href="{{ path('transit_expense_show') }}" class="btn btn-labeled btn-labeled-right bg-primary a-btn">{{ 'transit_expense_list'|trans([],'transit')|upper }} <b><i class="icon-pin-alt ml-2"></i></b></a>
		<a href="{{ path('upload') }}" class="btn btn-labeled btn-labeled-right bg-primary a-btn">{{ 'upload_file'|trans([],'transit')|upper }} <b><i class="icon-pin-alt ml-2"></i></b></a>
	</div>
{% endblock %}

{% block content %}
    
	<div class="row">
		<div class="col-md-12">
			<!-- Basic layout-->
			{{ form_start(form) }}
			<div class="card form-header">
				<div class="card-header bg-ligth text-dark header-elements-inline main-div-header">
					<h5 class="card-title"><span class="font-weight-bold">{{ 'form'|trans([],'base')|upper }}</span></h5>
					<div class="header-elements">
						<div class="list-icons"><a class="list-icons-item" data-action="collapse"></a></div>
					</div>
				</div>
				<div class="card-body">
					{{ form_start(form) }}
					<div class="row">
						<div class="col-md-3">
							<div class="form-group">
								<label>
									{{ 'amount'|trans([],'transit') }}
									<span class="text-danger">*</span>
								</label>
								{{ form_widget(form.amount) }}
							</div>
						</div>
						<div class="col-md-3">
							<div class="form-group">
								<label>
									{{ 'tva'|trans([],'transit') }}
								</label>
								{{ form_widget(form.tax) }}
							</div>
						</div>
						<div class="col-md-3">
							<div class="form-group">
								<label>
									{{ 'tva_amount'|trans([],'transit') }}
								</label>
								{{ form_widget(form.taxamount) }}
							</div>
						</div>
						<div class="col-md-3">
							<div class="form-group">
								<label>
									{{ 'date'|trans([],'transit') }}
									<span class="text-danger">*</span>
								</label>
								<div class="input-group">
									<span class="input-group-prepend">
										<span class="input-group-text">
											<i class="icon-calendar3"></i>
										</span>
									</span>
									{{ form_widget(form.createdAt) }}
								</div>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-md-6">
							<div class="form-group">
								<label>
									{{ 'description'|trans([],'transit') }}
									<span class="text-danger">*</span>
								</label>
								{{ form_widget(form.description) }}
							</div>
						</div>
						<div class="col-md-3">
							<div class="form-group">
								<label>
									{{ 'reference'|trans([],'transit') }}
								</label>
								{{ form_widget(form.reference) }}
							</div>
						</div>
						<div class="col-md-3">
							<div class="form-group mb-3 mb-md-2">
								<label class="d-block font-weight-semibold"></label>
								<div class="form-check form-check-inline form-check-right">
									<label class="form-check-label">
										{{ 'cash_payment'|trans([],'transit') }}
										{{ form_widget(form.is_cash) }}
									</label>
								</div>
							</div>
						</div>
					</div>
					<div class="d-flex justify-content-between align-items-center">
						<button class="btn btn-light" type="reset">
							{{ 'cancel'|trans([],'base')|upper }}
						</button>
						<button class="btn btn-primary form-btn" type="submit">
							{{ 'save'|trans([],'base')|upper }}
							<i class="icon-paperplane ml-2"></i>
						</button>
					</div>
				</div>
			</div>
			{{ form_end(form) }}
			<!-- /basic layout -->
		</div>
		
	</div>

{% endblock %}
    {% block javascripts %}
        {{ parent() }}
        <script src="{{ asset('global_assets/js/demo_pages/form_checkboxes_radios.js') }}"></script>
    {% endblock %}
