{% extends 'base.html.twig' %}

{% block title %} ZoZoo - Supply Request Articcle{% endblock %}

{% block breadcrumb %}
    <div class="breadcrumb-line breadcrumb-line-light header-elements-md-inline">
        <div class="d-flex">
            <div class="breadcrumb">
                <a href="{{ path('home') }}" class="breadcrumb-item"><i class="icon-home2 mr-2"></i> {{ 'dashboard'|trans([],'setting') }}</a>
                <span class="breadcrumb-item active"> {{ 'supply request article'|trans([],'setting') }}</span>
            </div>
        </div>
    </div>
{% endblock %}

{% block mainbtn %}
    <div class="text-center">
        <a href="{{ path('supply_request_article') }}" class="btn btn-primary btn-labeled btn-labeled-left btn-lg"><b><i class="icon-pin-alt"></i></b> {{ 'a.supply_request_article_list'|trans([],'setting') }}</a>
        <a href="{{ path('supply_request') }}" class="btn btn-primary btn-labeled btn-labeled-left btn-lg"><b><i class="icon-menu7"></i></b> {{ 'a.supply_request_list'|trans([],'setting') }}</a>
    </div>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert bg-{{ label }} text-white alert-styled-left alert-dismissible">
                <button type="button" class="close" data-dismiss="alert"><span>&times;</span></button>
                <span class="font-weight-semibold">{{ 'span.well_done'|trans([],'setting') }}</span> {{ message }}.
            </div>
        {% endfor %}
    {% endfor %}
{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-md-12">

            <!-- HTML sourced data -->
            <div class="card border-teal-400">
                <div class="card-header bg-teal-400 text-white header-elements-inline">
                    <h5 class="card-title">{{ 'title.supply_request_article_list'|trans([],'setting') }}</h5>
                </div>

                <div class="card-body">
                    <table class="table datatable-responsive table-bordered table-striped table-hover">
                        <thead>
                        <tr>
                            <th>{{ '#'|trans([],'article') }}</th>
                            <th>{{ 'th.reference'|trans([],'article') }}</th>
                            <th>{{ 'th.article'|trans([],'article') }}</th>
                            <th>{{ 'th.quantity'|trans ([],'article') }}</th>
                            <th></th>
                            <th class="text-center">{{ 'th.actions'|trans([],'setting') }}</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for supplyRequestArticle in supplyRequestArticles %}
                            <tr>
                                <td>{{ supplyRequestArticle.id }}</td>
                                <td>{{ supplyRequestArticle.supply.reference }}</td>
                                <td>{{ supplyRequestArticle.article }}</td>
                                <td>{{ supplyRequestArticle.quantity }}</td>
                                <td></td>
                                <td class="text-center">
                                    <div class="list-icons">
                                        <a href="{{ path('supply_request_article_edit', {id:supplyRequestArticle.id}) }}" class="col-lg-2"><i class="icon-pencil7 text-primary-600"></i></a>
                                        <a href="{{ path('supply_request_article_delete', {id:supplyRequestArticle.id}) }}"  onclick="return confirm('are u sure?')" class="col-lg-2"><i class="icon-trash text-danger-600"></i></a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /HTML sourced data -->

        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('global_assets/js/plugins/tables/datatables/datatables.min.js') }}"></script>
    <script src="{{ asset('global_assets/js/plugins/forms/selects/select2.min.js') }}"></script>

    <script src="{{ asset('global_assets/js/plugins/tables/datatables/extensions/responsive.min.js') }}"></script>

    <script src="{{ asset('global_assets/js/demo_pages/datatables_responsive.js') }}"></script>


{% endblock %}
