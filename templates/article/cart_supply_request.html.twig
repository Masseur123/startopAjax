{% extends 'base.html.twig' %}

{% block title %} ZoZoo - Supply Request Article {% endblock %}

{% block mainbtn %}
    <div class="text-center">
        <a href="{{ path('supply_request') }}" class="btn btn-primary btn-labeled btn-labeled-left btn-lg"><b><i class="icon-pin-alt"></i></b> {{ 'a.supply_request_list'|trans([],'article') }}</a>
        <a href="{{ path('supply_request_article') }}" class="btn btn-primary btn-labeled btn-labeled-left btn-lg"><b><i class="icon-menu7"></i></b> {{ 'a.supply_request_article_list'|trans([],'article') }}</a>
    </div>
{% endblock %}

{% block breadcrumb %}
    <div class="breadcrumb-line breadcrumb-line-light header-elements-md-inline">
        <div class="d-flex">
            <div class="breadcrumb">
                <a href="{{ path('home') }}" class="breadcrumb-item"><i class="icon-home2 mr-2"></i> {{ 'dashboard'|trans([],'article') }}</a>
                <span class="breadcrumb-item active"> {{ 'supply request article'|trans([],'article') }}</span>
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-md-4">
            <!-- Basic layout-->

            <div class="card border-teal-400">
                <div class="card-header bg-teal-400 text-white header-elements-inline">
                    <h5 class="card-title">{{ 'title.form'|trans([],'article') }}</h5>
                </div>

                <div class="card-body">
                    {{ form_start(form) }}
                    <!--<div class="form-group">
                        <label>{{ 'number'|trans([],'article') }} <span class="text-danger">*</span></label>

                    </div>-->
                    <div class="form-group">
                        <label>{{ 'article'|trans([],'article') }} <span class="text-danger">*</span> </label>
                        {{ form_widget(form.article) }}
                    </div>

                    <div class="form-group">
                        <label>{{ 'quantity'|trans([],'article') }} <span class="text-danger">*</span> </label>
                        {{ form_widget(form.quantity) }}
                    </div>


                    <div class="text-right">
                        <button type="submit" class="btn btn-primary">
                            {{ 'save'|trans([],'article') }}
                            <i class="icon-paperplane ml-2"></i>
                        </button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>

            <!-- /basic layout -->
        </div>

        <div class="col-md-8">
            <div class="card border-teal-400">
                <div class="card-header bg-teal-400 text-white header-elements-inline">
                    <h5 class="card-title">{{ 'title.supply_request_article_list'|trans([],'article') }}</h5>
                </div>

                <div class="card-body">
                    <table class="table datatable-responsive table-bordered table-striped table-hover">
                        <thead>
                        <tr>
                            <th>{{ '#'|trans([],'article') }}</th>
                            <th>{{ 'th.reference'|trans([],'article') }}</th>
                            <th>{{ 'th.article'|trans([],'article') }}</th>
                            <th>{{ 'th.quantity'|trans ([],'article') }}</th>
                            <th></th>
                            <th class="text-center">{{ 'th.actions'|trans([],'article') }}</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for supplyRequestArticle in supplyRequestArticles %}
                            <tr>
                                <td>{{ supplyRequestArticle.id }}</td>
                                <td>{{ supplyRequestArticle.supply.reference }}</td>
                                <td>{{ supplyRequestArticle.article.name }}</td>
                                <td>{{ supplyRequestArticle.quantity }}</td>
                                <td></td>
                                <td class="text-center">
                                    <div class="list-icons">
                                        <a href="{{ path('supply_request_article_edit', {id:supplyRequestArticle.id, supply:supplyRequestArticle.supply.id}) }}" data-popup="tooltip-custom" title="Modify Supply Request" data-placement="left" id="left" class="col-lg-2"><i class="icon-pencil7 text-primary-600"></i></a>
                                        <a href="{{ path('supply_request_article_delete', {id:supplyRequestArticle.id}) }}" data-popup="tooltip-custom" title="Delete Supply Request" data-placement="top" onclick="return confirm('are u sure?')" class="col-lg-2"><i class="icon-trash text-danger-600"></i></a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>

{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('global_assets/js/plugins/extensions/jquery_ui/interactions.min.js') }}"></script>
    <script src="{{ asset('global_assets/js/plugins/forms/styling/switchery.min.js') }}"></script>
    <script src="{{ asset('global_assets/js/plugins/forms/styling/switch.min.js') }}"></script>
    <script src="{{ asset('global_assets/js/demo_pages/form_checkboxes_radios.js') }}"></script>

    <script src="{{ asset('global_assets/js/plugins/forms/styling/uniform.min.js') }}"></script>
    <script src="{{ asset('global_assets/js/plugins/forms/selects/select2.min.js') }}"></script>
    <script src="{{ asset('global_assets/js/demo_pages/form_select2.js') }}"></script>
    <script src="{{ asset('global_assets/js/demo_pages/form_layouts.js') }}"></script>

    <script src="{{ asset('global_assets/js/demo_pages/components_popups.js') }}"></script>
{% endblock %}
