{% extends 'base.html.twig' %}

{% block title %}{{ 'page.title.serial'|trans([],'transit') }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block page_header_content_page_title %}
    <div class="page-title d-flex">
        <h3><i class="icon-arrow-left52 mr-2"></i> <span class="font-weight-bold">{{ 'serial_list'|trans([],'transit') }}</span></h3>
        <a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
    </div>
{% endblock %}

{% block page_header_content_header_elements_button %}
    <div class="header-elements d-none">
        <a href="{{ path('serial_new') }}" class="btn btn-labeled btn-labeled-right bg-primary a-btn">{{ 'new'|trans([],'base')|upper }} <b><i class="icon-pin-alt ml-2"></i></b></a>
    </div>
{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-md-8">

            <!-- HTML sourced data -->
            <div class="card">
                <table class="table park table-bordered table-striped table-hover">
                    <thead class="bg-blue">
                        <tr>
                            <th></th>
                            <th>{{ 'code'|trans([],'article')|upper }}</th>
                            <th>{{ 'article'|trans([],'article')|upper }}</th>
                            <th></th>
                            <th></th>
                            <th class="text-center">{{ 'th.actions'|trans([],'article') }}</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for serial in serials %}
                            <tr>
                                <td></td>
                                <td><span class="badge badge-flat border-success text-success font-size-xl">{{ serial.code }}</td>
                                <td>{{ serial.article.name }}</td>
                                <td></td>
                                <td></td>
                                <td class="text-center">
                                    <div class="list-icons">
                                        <a href="{{ path('serial_edit', {id:serial.id}) }}" class="list-icons-item text-primary-600"><i class="icon-pencil7"></i></a>
                                        <a href="{{ path('serial_delete', {id:serial.id}) }}"  onclick="return confirm('are u sure?')" class="list-icons-item text-danger-600"><i class="icon-trash"></i></a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /HTML sourced data -->
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

{% endblock %}
