{% extends 'base.html.twig' %}

{% block title %}{{ 'page.title.transit_file'|trans([],'transit') }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block page_header_content_page_title %}
    <div class="page-title d-flex">
        <h3><i class="icon-arrow-left52 mr-2"></i> <span class="font-weight-bold">{{ 'transit'|trans([],'transit') }}</span></h3>
		<a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
    </div>
{% endblock %}

{% block page_header_content_header_elements_button %}
	<div class="header-elements d-none">
		<a href="{{ path('transit') }}" class="btn btn-labeled btn-labeled-right bg-primary a-btn">{{ 'transit_list'|trans([],'transit')|upper }} <b><i class="icon-pin-alt ml-2"></i></b></a>
	</div>
{% endblock %}

{% block content %}
    <div class="row">
            <div class="col-md-12">
                <div class="card">
					<div class="card-header bg-ligth text-dark header-elements-inline main-div-header">
                        <h5 class="card-title"><span class="font-weight-bold">{{ 'form'|trans([],'base')|upper }}</span></h5>
						<div class="header-elements">
                            <div class="list-icons"><a class="list-icons-item" data-action="collapse"></a></div>
                        </div>
                    </div>
                    <!-- 2 columns form -->
                    <div class="card-body">
                        {{ form_start(form) }}
                        <div class="row">
                            <div class="col-md-6">
                                <fieldset>
                                    <!-- <legend class="font-weight-semibold"><i class="icon-reading mr-2"></i> Personal details</legend> -->
                                    <div class="form-group">
                                        <label>
                                            {{ 'transit_number'|trans([],'transit') }}
                                            <span class="text-danger">*</span>
                                        </label>
                                        {{ form_widget(form.reference) }}
                                        <span class="text-danger">{{ form_errors(form.reference) }}</span>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>{{ 'boat_number'|trans([],'transit') }}</label>
                                                {{ form_widget(form.boat) }}
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>
                                                    {{ 'is_open'|trans([],'transit') }}
                                                </label>
                                                {{ form_widget(form.is_open) }}
                                            </div>
                                        </div>
                                    </div>
                                </fieldset>
                            </div>
                            <div class="col-md-6">
                                <fieldset>
                                    <!-- <legend class="font-weight-semibold"><i class="icon-truck mr-2"></i> Shipping details</legend> -->
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>
                                                    {{ 'origin_country'|trans([],'transit') }}
                                                    <span class="text-danger">*</span>
                                                </label>
                                                {{ form_widget(form.countryfrom) }}
                                                <span class="text-danger">{{ form_errors(form.countryfrom) }}</span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>{{ 'origin_town'|trans([],'transit') }}</label>
                                                {{ form_widget(form.comingfrom) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>
                                                    {{ 'destination_country'|trans([],'transit') }}
                                                    <span class="text-danger">*</span>
                                                </label>
                                                {{ form_widget(form.countryto) }}
                                                <span class="text-danger">{{ form_errors(form.countryto) }}</span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>{{ 'destination_town'|trans([],'transit') }}</label>
                                                {{ form_widget(form.goingto) }}
                                            </div>
                                        </div>
                                    </div>
                                </fieldset>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <button class="btn btn-light" type="reset">
                                {{ 'cancel'|trans([],'base')|upper }}
                            </button>
                            <div>
                                {{ form_widget(form.saveAndCreateNew, {label: 'SAVE AND NEW', attr: {class: ' btn btn-primary form-btn-sn '}}) }}
                                <button class="btn btn-primary form-btn" type="submit">
                                    {{ 'save'|trans([],'base')|upper }}
                                    <i class="icon-paperplane ml-2"></i>
                                </button>
						    </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                    <!-- /2 columns form -->
                </div>
            </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
	   <script src="{{ asset('global_assets/js/plugins/extensions/jquery_ui/interactions.min.js') }}"></script>
        <script src="{{ asset('global_assets/js/plugins/forms/styling/switchery.min.js') }}"></script>
        <script src="{{ asset('global_assets/js/plugins/forms/styling/switch.min.js') }}"></script>
        <script src="{{ asset('global_assets/js/demo_pages/form_checkboxes_radios.js') }}"></script>
{% endblock %}


