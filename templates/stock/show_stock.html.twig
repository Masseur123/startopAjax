{% extends 'base.html.twig' %}

{% block title %}{{ 'page.title.stock'|trans([],'stock') }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block page_header_content_page_title %}
    <div class="page-title d-flex">
        <h3><i class="icon-arrow-left52 mr-2"></i> <span class="font-weight-bold">{{ 'stock_list'|trans([],'transit') }}</span></h3>
        <a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
    </div>
{% endblock %}

{% block page_header_content_header_elements_button %}
    <div class="header-elements d-none">
        <a href="{{ path('stock_add') }}" class="btn btn-labeled btn-labeled-right bg-primary a-btn">{{ 'add'|trans([],'base')|upper }} <b><i class="icon-pin-alt ml-2"></i></b></a>
        <a href="{{ path('stock_remove') }}" class="btn btn-labeled btn-labeled-right bg-primary a-btn">{{ 'remove'|trans([],'base')|upper }} <b><i class="icon-pin-alt ml-2"></i></b></a>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <!-- HTML sourced data -->
            <div class="card">

                <table class="table datatable-responsive table-bordered table-striped table-hover">
                    <thead class="bg-blue">
                    <tr>
                        <th>{{ 'th.store'|trans([],'mass') }}</th>
                        <th>{{ 'th.article'|trans([],'mass') }}</th>
                        <th>{{ 'th.quantity'|trans([],'mass') }}</th>
                        <th>{{ 'th.stockprice'|trans([],'mass') }}</th>
                        <th>{{ 'th.stockAt'|trans([],'mass') }}</th>
                        <th>{{ 'th.type'|trans([],'mass') }}</th>
                        <th class="text-center">{{ 'th.actions'|trans([],'mass') }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for stock in stocks %}
                        <tr>
                            <td>{{ stock.store.designation }}</td>
                            <td>{{ stock.article.name }}</td>
                            <td>{{ stock.stockprice }}</td>

                            {% if stock.type ==1 %}
                                <td>{{ stock.quantity }}</td>
                            {% else %}
                                <td>{{ stock.quantity }}</td>
                            {% endif %}

                            <td>{{ stock.stockAt |date("m/d/Y") }}</td>
                            <td class="text-center">
                                <div class="list-icons">
                                    <a href="{{ path('stock_edit', {id:stock.id}) }}" class="list-icons-item text-primary-600"><i class="icon-pencil7"></i></a>
                                    <a href="{{ path('stock_delete', {id:stock.id}) }}"  onclick="return confirm('are u sure?')" class="list-icons-item text-danger-600"><i class="icon-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <!-- /HTML sourced data -->
        </div>
    </div>

{% endblock %}



{% block javascripts %}
    {{ parent() }}

{% endblock %}