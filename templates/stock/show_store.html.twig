{% extends 'base.html.twig' %}

{% block title %}{{ 'page.title.store'|trans([],'transit') }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block page_header_content_page_title %}
    <div class="page-title d-flex">
        <h3><i class="icon-arrow-left52 mr-2"></i> <span class="font-weight-bold">{{ 'store_list'|trans([],'transit') }}</span></h3>
        <a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
    </div>
{% endblock %}

{% block page_header_content_header_elements_button %}
    <div class="header-elements d-none">
        <a href="{{ path('store_new') }}" class="btn btn-labeled btn-labeled-right bg-primary a-btn">{{ 'new'|trans([],'base')|upper }} <b><i class="icon-pin-alt ml-2"></i></b></a>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <table class="table park table-bordered table-striped table-hover">
                    <thead class="bg-blue">
                    <tr>
                        <th></th>
                        <th>{{ 'designation'|trans([],'mass')|upper }}</th>
                        <th>{{ 'location'|trans([],'mass')|upper }}</th>
                        <th></th>
                        <th></th>
                        <th class="text-center">{{ 'th.actions'|trans([],'mass') }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for store in stores %}
                        <tr>
                            <td></td>
                            <td><span class="badge badge-flat border-success text-success font-size-xl">{{ store.designation }}</td>
                            <td>{{ store.location }}</td>
                            <td></td>
                            <td></td>
                            <td class="text-center">
                                <div class="list-icons">
                                    <a href="{{ path('store_edit', {id:store.id}) }}" class="list-icons-item text-primary-600"><i class="icon-pencil7"></i></a>
                                    <a href="{{ path('store_delete', {id:store.id}) }}"  onclick="return confirm('are u sure?')" class="list-icons-item text-danger-600"><i class="icon-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <!-- /HTML sourced data -->
        </div>
    </div>

{% endblock %}



{% block javascripts %}
    {{ parent() }}

        <script>
            $.get('stock/store', function (data) {
                $('#store').append(data);
            });
        </script>

{% endblock %}