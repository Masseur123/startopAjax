{% extends 'base.html.twig' %}


{% block title %}{{ 'page.title.bank'|trans([],'treasury') }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block page_header_content_page_title %}
    <div class="page-title d-flex">
        <h3><i class="icon-arrow-left52 mr-2"></i> <span class="font-weight-bold">{{ 'bank'|trans([],'treasury') }}</span></h3>
		<a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
    </div>
{% endblock %}

{% block page_header_content_header_elements_button %}
	<div class="header-elements d-none">
		<a href="{{ path('bank') }}" class="btn btn-labeled btn-labeled-right bg-primary a-btn">{{ 'bank_list'|trans([],'treasury')|upper }} <b><i class="icon-pin-alt ml-2"></i></b></a>
	</div>
{% endblock %}

{% block content %}
    
	<div class="row">
		<div class="col-md-12">
			<!-- Basic layout-->
			{{ form_start(form) }}
			<div class="card">
				<div class="card-header bg-ligth text-dark header-elements-inline main-div-header">
					<h5 class="card-title"><span class="font-weight-bold">{{ 'form'|trans([],'base')|upper }}</span></h5>
					<div class="header-elements">
						<div class="list-icons"><a class="list-icons-item" data-action="collapse"></a></div>
					</div>
				</div>
				<div class="card-body">
                        {{ form_start(form) }}
                        <div class="row">
                            <div class="col-md-3">
                                <fieldset>
                                    <!-- <legend class="font-weight-semibold"><i class="icon-reading mr-2"></i> Personal</legend> -->
                                    <div class="form-group">
                                        <label>
                                            {{ 'code'|trans([],'treasury') }}
                                            <span class="text-danger">*</span>
                                        </label>
                                        {{ form_widget(form.code) }}
                                        <span class="text-danger">{{ form_errors(form.code) }}</span>
                                    </div>
                                    <div class="form-group">
                                        <label>
                                            {{ 'name'|trans([],'treasury') }}
                                            <span class="text-danger">*</span>
                                        </label>
                                        {{ form_widget(form.name) }}
                                        <span class="text-danger">{{ form_errors(form.name) }}</span>
                                    </div>
                                    <div class="form-group">
                                        <label>{{ 'location'|trans([],'treasury') }}</label>
                                        {{ form_widget(form.location) }}
                                    </div>
                                    <div class="form-group">
                                        <label>{{ 'email'|trans([],'treasury') }}</label>
                                        {{ form_widget(form.email) }}
                                    </div>
                                </fieldset>
                            </div>
                            <div class="col-md-3">
                                <fieldset>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>
                                                    {{ 'fix_phone'|trans([],'treasury') }}
                                                </label>
                                                {{ form_widget(form.fixphone) }}
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>
                                                    {{ 'mobile_phone'|trans([],'treasury') }}
                                                </label>
                                                {{ form_widget(form.mobilephone) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label>
                                            {{ 'po_box'|trans([],'treasury') }}
                                        </label>
                                        {{ form_widget(form.pobox) }}
                                    </div>
                                    <div class="form-group">
                                        <label>
                                            {{ 'tax_payer_number'|trans([],'treasury') }}</label>
                                        {{ form_widget(form.taxpayernumber) }}
                                    </div>
                                    <div class="form-group">
                                        <label>
                                            {{ 'business_number'|trans([],'treasury') }}</label>
                                        {{ form_widget(form.businessnumber, {'attr':{'class':"form-control"}}) }}
                                    </div>
                                </fieldset>
                            </div>
                            <div class="col-md-3">
                                <fieldset>
                                    <!-- <legend class="font-weight-semibold"><i class="icon-reading mr-2"></i> Localization</legend> -->
                                    <div class="form-group">
                                        <label>
                                            {{ 'code_bank'|trans([],'treasury') }}</label>
                                        {{ form_widget(form.code_bank) }}
                                    </div>
                                    <div class="form-group">
                                        <label>
                                            {{ 'code_branch'|trans([],'treasury') }}</label>
                                        {{ form_widget(form.code_branch) }}
                                    </div>
                                    <div class="form-group">
                                        <label>
                                            {{ 'code_swift'|trans([],'treasury') }}
                                        </label>
                                        {{ form_widget(form.code_swift) }}
                                    </div>
                                    <div class="form-group">
                                        <label>
                                            {{ 'code_ibam'|trans([],'treasury') }}
                                        </label>
                                        {{ form_widget(form.code_ibam) }}
                                    </div>
                                </fieldset>
                            </div>
                            <div class="col-md-3">
                                <fieldset>
                                    <!-- <legend class="font-weight-semibold"><i class="icon-reading mr-2"></i> Personal</legend> -->
                                    <div class="form-group">
                                        <label>
                                            {{ 'code_rib'|trans([],'treasury') }}</label>
                                        {{ form_widget(form.code_rib) }}
                                    </div>
                                    <div class="form-group">
                                        <label>
                                            {{ 'bank_account'|trans([],'treasury') }}
                                            <span class="text-danger">*</span>
                                        </label>
                                        {{ form_widget(form.account_number) }}
                                        <span class="text-danger">
                                            {{ form_errors(form.account_number) }}</span>
                                    </div>
                                    <div class="form-group">
                                        <label>
                                            {{ 'ohada_account'|trans([],'treasury') }}</label>
                                        {{ form_widget(form.account) }}
                                    </div>
                                    <div class="form-group">
                                        <label>
                                            {{ 'journal'|trans([],'treasury') }}</label>
                                        {{ form_widget(form.journal) }}
                                    </div>
                                </fieldset>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <button class="btn btn-light" type="reset">
                                {{ 'cancel'|trans([],'base')|upper }}
                            </button>
                            <div>
                                {{ form_widget(form.saveAndCreateNew, {label: 'SAVE AND NEW', attr: {class: ' btn btn-primary form-btn-sn '}}) }}
                                <button class="btn btn-primary form-btn" type="submit">
                                    {{ 'save'|trans([],'base')|upper }}
                                    <i class="icon-paperplane ml-2"></i>
                                </button>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
			<!-- /basic layout -->
		</div>
	</div>
    {% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}