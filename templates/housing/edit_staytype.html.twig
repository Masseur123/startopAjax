{% extends 'base.html.twig' %}
{% block title %}{{ 'page.title.stay_type'|trans([],'setting') }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block main_sidebar_user_menu %}{% endblock %}

{% block page_header_content_page_title %}
    <div class="page-title d-flex">
        <h3><i class="icon-arrow-left52 mr-2"></i> <span class="font-weight-bold">{{ 'stay_type'|trans([],'setting') }}</span></h3>
		<a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
    </div>
{% endblock %}

{% block page_header_content_header_elements_button %}
	<div class="header-elements d-none">
		<a href="{{ path('housing_staytype') }}" class="btn btn-labeled btn-labeled-right bg-primary a-btn">{{ 'list_of_stay_type'|trans([],'setting')|upper }} <b><i class="icon-pin-alt ml-2"></i></b></a>
	</div>
{% endblock %}

{% block content %} 

<div class="row">
    <div class="col-md-4">
        <!-- Basic layout-->
        <div class="card">
            <div class="card-header bg-ligth text-dark header-elements-inline main-div-header">
                <h5 class="card-title"><span class="font-weight-bold">{{ 'form'|trans([],'base')|upper }}</span></h5>
            </div>

            <div class="card-body">
            {{ form_start(form) }}

            <div class="form-group">
                <label>{{ 'name'|trans([],'setting') }} <span class="text-danger">*</span></label>
                    {{ form_widget(form.name) }}
                <span class="text-danger"> {{ form_errors(form.name, {'attr':{'placeholder':"Name" , 'class':"form-control"}}) }}</span>
            </div>

            <div class="form-group">
                <label>{{ 'color'|trans([],'setting') }} <span class="text-danger">*</span></label>
                    {{ form_widget(form.color) }}
                <span class="text-danger"> {{ form_errors(form.color, {'attr':{'placeholder':"Color" , 'class':"form-control"}}) }}</span>
            </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <button class="btn btn-light" type="reset">
                            {{ 'cancel'|trans([],'base')|upper }}
                        </button>
                        <div>
                            {{ form_widget(form.saveAndCreateNew, {label: 'SAVE AND NEW', attr: {class: ' btn btn-primary form-btn-sn '}}) }}
                        <button class="btn btn-primary form-btn" type="submit">
                            {{ 'save'|trans([],'base')|upper }}
                            <i class="icon-paperplane ml-2"></i>
                        </button>
                        </div>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
            <!-- /basic layout -->
        </div>
    </div>

{% endblock %}


{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('global_assets/js/plugins/forms/styling/uniform.min.js') }}"></script>

    <script src="{{ asset('global_assets/js/plugins/forms/styling/switchery.min.js') }}"></script>

    <script src="{{ asset('global_assets/js/plugins/forms/styling/switch.min.js') }}"></script>

    
    <script src="{{ asset('global_assets/js/plugins/forms/selects/select2.min.js') }}"></script>

    <script src="{{ asset('global_assets/js/demo_pages/form_select2.js') }}"></script>

     <script src="{{ asset('global_assets/js/demo_pages/form_checkboxes_radios.js') }}"></script>

    <script src="{{ asset('global_assets/js/demo_pages/form_layouts.js') }}"></script>
    
{% endblock %}
