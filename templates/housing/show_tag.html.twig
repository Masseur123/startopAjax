{% extends 'base.html.twig' %}

{% block title %}{{ 'page.title.tag'|trans([],'setting') }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block main_sidebar_user_menu %}{% endblock %}

{% block page_header_content_page_title %}
    <div class="page-title d-flex">
        <h3><i class="icon-arrow-left52 mr-2"></i> <span class="font-weight-bold">{{ 'tag'|trans([],'setting') }}</span></h3>
        <a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
    </div>
{% endblock %}

{% block page_header_content_header_elements_button %}
    <div class="header-elements d-none">
        <a href="{{ path('housing_tag_new') }}" class="btn btn-labeled btn-labeled-right bg-primary a-btn">{{ 'new'|trans([],'base')|upper }} <b><i class="icon-pin-alt ml-2"></i></b></a>
    </div>
{% endblock %}

{% block content %} 

<div class="row">
        <div class="col-md-8">
    
            <!-- HTML sourced data -->
            <div class="card">
                <div class="card-header bg-ligth text-dark header-elements-inline main-div-header">
                    <h5 class="card-title"><span class="font-weight-bold"> {{ 'tag_list'|trans([],'setting')|upper }}</span></h5>
                </div>
    
                <div class="card-body">
                    <table class="table upload table-bordered table-striped table-hover" id="tag">
                        <thead>
                    <tr>
                        <th></th>
                        <th>{{ 'name'|trans([],'housing') }}</th>
                        <th>{{ 'tagcategory'|trans([],'housing') }}</th>
                        <th>{{ 'value'|trans([],'housing') }}</th>
                        <th></th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for tag in tags %}
                    <tr>
                        <td></td>
                        <td><span class="badge badge-info">{{ tag.name }}</td>
                        <td>{{ tag.tagcategory }}</td>
                        <td><span class="badge badge-info">{{ tag.value }}</td>
                        <td>
                        </td>
                        <td class="text-center">
                            <div class="list-icons">
                                <a href="{{ path('housing_tag_edit', {id:tag.id}) }}" class="list-icons-item text-primary-600"><i class="icon-pencil7"></i></a>
                                <a href="{{ path('housing_tag_delete', {id:tag.id}) }}"  onclick="return confirm('are u sure?')" class="list-icons-item text-danger-600"><i class="icon-trash"></i></a>


                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        </div>
        <!-- /HTML sourced data -->
    </div>
</div>

{% endblock %}



{% block javascripts %}
    {{ parent() }}

{% endblock %}
