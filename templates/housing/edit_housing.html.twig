{% extends 'base.html.twig' %}

{% block title %}Hello !{% endblock %}


{% block mainbtn %}
    <div class="header-elements d-none">
        <a href="{{ path('housing_housing_new') }}" class="btn btn-labeled btn-labeled-right bg-primary">{{ 'new'|trans([],'housing') }} {{ 'housing'|trans([],'housing') }} <b><i class="icon-menu7"></i></b></a>
    </div>
{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-md-5">
            <!-- Basic layout-->
            {{ form_start(form) }}
            <div class="card border-teal-400">
                <div class="card-header bg-teal-400 text-white header-elements-inline">
                    <h5 class="card-title">{{ 'form'|trans([],'housing') }}</h5>
                </div>

                <div class="card-body">
                    <div class="form-group row">
                        <label class="col-lg-3 col-form-label">{{ 'hotel'|trans([],'housing') }}:</label>
                        <div class="col-lg-9">
                            {{ form_widget(form.hotel) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-3 col-form-label">{{ 'hotel'|trans([],'housing') }}:</label>
                        <div class="col-lg-9">
                            {{ form_widget(form.housingtype) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-3 col-form-label">{{ 'label'|trans([],'housing') }}:</label>
                        <div class="col-lg-9">
                            {{ form_widget(form.label, {'attr':{'placeholder':"label" , 'class':"form-control"}}) }}
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-lg-3 col-form-label">{{ 'price'|trans([],'housing') }}:</label>
                        <div class="col-lg-9">
                            {{ form_widget(form.price, {'attr':{'placeholder':"price" , 'class':"form-control"}}) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-3 col-form-label">{{ 'price_adult'|trans([],'housing') }}:</label>
                        <div class="col-lg-9">
                            {{ form_widget(form.price_adult, {'attr':{'placeholder':"price_adult" , 'class':"form-control"}}) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-3 col-form-label">{{ 'price_child'|trans([],'housing') }}:</label>
                        <div class="col-lg-9">
                            {{ form_widget(form.price_child, {'attr':{'placeholder':"price_child" , 'class':"form-control"}}) }}
                        </div>
                    </div>

                    <div class="text-right">
                        <button type="submit" class="btn btn-primary">
                            {{ 'save'|trans([],'housing') }}
                            <i class="icon-paperplane ml-2"></i>
                        </button>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
            <!-- /basic layout -->
        </div>
    </div>

{% endblock %}


{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('global_assets/js/plugins/forms/styling/uniform.min.js') }}"></script>

    <script src="{{ asset('global_assets/js/plugins/forms/styling/switchery.min.js') }}"></script>

    <script src="{{ asset('global_assets/js/plugins/forms/styling/switch.min.js') }}"></script>

    
    <script src="{{ asset('global_assets/js/plugins/forms/selects/select2.min.js') }}"></script>

    <script src="{{ asset('global_assets/js/demo_pages/form_select2.js') }}"></script>

     <script src="{{ asset('global_assets/js/demo_pages/form_checkboxes_radios.js') }}"></script>

    <script src="{{ asset('global_assets/js/demo_pages/form_layouts.js') }}"></script>

{% endblock %}
