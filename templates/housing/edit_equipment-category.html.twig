{% extends 'base.html.twig' %}

{% block title %}Hello !{% endblock %}


{% block mainbtn %}
    <div class="header-elements d-none">
        <a href="{{ path('equipment_category_new') }}" class="btn btn-labeled btn-labeled-right bg-primary">{{ 'new'|trans([],'housing') }} {{ 'equipment_category'|trans([],'housing') }} <b><i class="icon-menu7"></i></b></a>
    </div>
{% endblock %}

{% block content %} 

    <div class="row">
        <div class="col-md-5">
            <!-- Basic layout-->
            {{ form_start(form) }}
            <div class="card border-teal-400">
                <div class="card-header bg-teal-400 text-white header-elements-inline">
                    <h5 class="card-title">{{ 'form'|trans([],'housing') }}</h5>
                </div>

                <div class="card-body">
                    <div class="form-group row">
                        <label class="col-lg-3 col-form-label">{{ 'hotel'|trans([],'housing') }}:</label>
                        <div class="col-lg-9">
                            {{ form_widget(form.hotel) }}
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-lg-3 col-form-label">{{ 'code'|trans([],'housing') }}:</label>
                        <div class="col-lg-9">
                            {{ form_widget(form.code, {'attr':{'placeholder':"code" , 'class':"form-control"}}) }}
                        </div>
                    </div> 

                    <div class="form-group row">
                        <label class="col-lg-3 col-form-label">{{ 'name'|trans([],'housing') }}:</label>
                        <div class="col-lg-9">
                            {{ form_widget(form.name, {'attr':{'placeholder':"Name" , 'class':"form-control"}}) }}
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-lg-3 col-form-label">{{ 'description'|trans([],'housing') }}:</label>
                        <div class="col-lg-9">
                            {{ form_widget(form.description, {'attr':{'placeholder':"description" , 'class':"form-control"}}) }}
                        </div>
                    </div>           

                    <div class="text-right">
                        <button type="submit" class="btn btn-primary">
                        {{ 'save'|trans([],'housing') }}
                        <i class="icon-paperplane ml-2"></i>
                        </button>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
            <!-- /basic layout -->
        </div>
    </div>

{% endblock %}


{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('global_assets/js/plugins/forms/styling/uniform.min.js') }}"></script>

    <script src="{{ asset('global_assets/js/plugins/forms/styling/switchery.min.js') }}"></script>

    <script src="{{ asset('global_assets/js/plugins/forms/styling/switch.min.js') }}"></script>

    
    <script src="{{ asset('global_assets/js/plugins/forms/selects/select2.min.js') }}"></script>

    <script src="{{ asset('global_assets/js/demo_pages/form_select2.js') }}"></script>

    <script src="{{ asset('global_assets/js/demo_pages/form_layouts.js') }}"></script>
    
{% endblock %}
