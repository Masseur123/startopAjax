{% extends 'base.html.twig' %}

{% block title %}{{ 'page.title.pricing'|trans([],'setting') }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block main_sidebar_user_menu %}{% endblock %}

{% block page_header_content_page_title %}
    <div class="page-title d-flex">
        <h3><i class="icon-arrow-left52 mr-2"></i> <span class="font-weight-bold">{{ 'pricing'|trans([],'setting') }}</span></h3>
		<a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
    </div>
{% endblock %}

{% block page_header_content_header_elements_button %}
	<div class="header-elements d-none">
		<a href="{{ path('pricing') }}" class="btn btn-labeled btn-labeled-right bg-primary a-btn">{{ 'princing_list'|trans([],'setting')|upper }} <b><i class="icon-pin-alt ml-2"></i></b></a>
	</div>
{% endblock %}

{% block content %} 
<div class="row">
    <div class="col-md-8">
        <!-- Basic layout-->

        <div class="card">
            <div class="card-header bg-ligth text-dark header-elements-inline main-div-header">
                <h5 class="card-title"><span class="font-weight-bold">{{ 'form'|trans([],'base')|upper }}</span></h5>
            </div>

            <div class="card-body">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-4">
                        <div class="form-group">
                                <label>{{ 'name'|trans([],'housing') }}:</label>
                                    {{ form_widget(form.name) }}
                                    <span class="text-danger"> {{ form_errors(form.name) }}</span>
                        </div>
                </div>
                <div class="col-md-4">
                            <div class="form-group">
                                    <label>{{ 'price'|trans([],'housing') }}:</label>
                                        {{ form_widget(form.price) }}
                                        <span class="text-danger"> {{ form_errors(form.price) }}</span>
                            </div>
                </div>
                <div class="col-md-4">
                            <div class="form-group">
                                <label>{{ 'date'|trans([],'housing') }}:</label>
                                    {{ form_widget(form.date) }}
                                <span class="text-danger"> {{ form_errors(form.date) }}</span>
                            </div>
                        
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                        <div class="form-group">
                                <label>{{ 'extra_baby'|trans([],'housing') }}:</label>
                                    {{ form_widget(form.extra_baby) }}
                                <span class="text-danger"> {{ form_errors(form.extra_baby) }}</span>
                        </div>
                </div>
                <div class="col-md-4">
                        <div class="form-group">
                                <label>{{ 'extra_child'|trans([],'housing') }}:</label>
                                    {{ form_widget(form.extra_child) }}
                                <span class="text-danger"> {{ form_errors(form.extra_child) }}</span>
                        </div>
                </div>
                <div class="col-md-4">
                        <div class="form-group">
                                <label>{{ 'extra_adult'|trans([],'housing') }}:</label>
                                    {{ form_widget(form.extra_adult) }}
                                <span class="text-danger"> {{ form_errors(form.extra_adult) }}</span>
                        </div>
                </div>
            </div>
                    
                   

                    <div class="row">
                    <div class="col-md-6">
                    <div class="form-group">
                            <label>{{ 'season'|trans([],'housing') }}:</label>
                                {{ form_widget(form.season) }}
                            <span class="text-danger"> {{ form_errors(form.season) }}</span>
                    </div>
                    </div>

                    <div class="col-md-6">
                    <div class="form-group">
                        <label>{{ 'housing_type'|trans([],'housing') }}:</label>
                            {{ form_widget(form.housingtype) }}
                            <span class="text-danger"> {{ form_errors(form.season) }}</span>
                    </div>
                    </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
						<button class="btn btn-light" type="reset">
							{{ 'cancel'|trans([],'base')|upper }}
						</button>
                        <div>
                            {{ form_widget(form.saveAndCreateNew, {label: 'SAVE AND NEW', attr: {class: ' btn btn-primary form-btn-sn '}}) }}
						    <button class="btn btn-primary form-btn" type="submit">
							    {{ 'save'|trans([],'base')|upper }}
							    <i class="icon-paperplane ml-2"></i>
						    </button>
                        </div>
					</div>
                
            
            {{ form_end(form) }}
            <!-- /basic layout -->
        </div>
        </div>
        </div>
    </div>

{% endblock %}


{% block javascripts %}
    {{ parent() }}

    
{% endblock %}
