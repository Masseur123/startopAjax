{% extends 'base.html.twig' %}

{% block title %}{{ 'page.title.pricing'|trans([],'setting') }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block main_sidebar_user_menu %}{% endblock %}

{% block page_header_content_page_title %}
    <div class="page-title d-flex">
        <h3><i class="icon-arrow-left52 mr-2"></i> <span class="font-weight-bold">{{ 'pricing'|trans([],'setting') }}</span></h3>
        <a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
    </div>
{% endblock %}

{% block page_header_content_header_elements_button %}
    <div class="header-elements d-none">
        <a href="{{ path('pricing_new') }}" class="btn btn-labeled btn-labeled-right bg-primary a-btn">{{ 'new'|trans([],'base')|upper }} <b><i class="icon-pin-alt ml-2"></i></b></a>
    </div>
{% endblock %}

{% block content %} 
<div class="row">
        <div class="col-md-12">
    
            <!-- HTML sourced data -->
            <div class="card">
                <div class="card-header bg-ligth text-dark header-elements-inline main-div-header">
                    <h5 class="card-title"><span class="font-weight-bold"> {{ 'pricing_list'|trans([],'setting')|upper }}</span></h5>
                </div>
    
                <div class="card-body">
                    <table class="table datatable-responsive table-bordered table-striped table-hover" id="pricing">
                        <thead>
                    <tr>
                        <th>{{ 'name'|trans([],'setting') }}</th>
                        <th>{{ 'price'|trans([],'setting') }}</th>
                        <th>{{ 'date'|trans([],'setting') }}</th>
                        {#<th>{{ 'extra baby'|trans([],'setting') }}</th>
                        <th>{{ 'extra child'|trans([],'setting') }}</th>
                        <th>{{ 'extra adult'|trans([],'setting') }}</th>#}
                        <th>{{ 'housing type'|trans([],'setting') }}</th>
                        <th>{{ 'Season'|trans([],'setting') }}</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for pricing in pricings %}
                    <tr>
                        <td><span class="badge badge-info">{{ pricing.name }}</td>
                        <td>{{ pricing.price }}</td>
                        <td>{{ pricing.date|date("m/d/Y") }}</td>
                        {#<td>{{ pricing.extra_baby }}</td>
                        <td>{{ pricing.extra_child }}</td>
                        <td>{{ pricing.extra_adult }}</td>#}
                        <td>{{ pricing.housingType.name }}</td>
                        <td>{{ pricing.season.name }}</td>
                        <td class="text-center">
                            <div class="list-icons">
                                <a href="{{ path('pricing_edit', {id:pricing.id}) }}" class="list-icons-item text-primary-600"><i class="icon-pencil7"></i></a>
                                <a href="{{ path('pricing_delete', {id:pricing.id}) }}"  onclick="return confirm('are u sure?')" class="list-icons-item text-danger-600"><i class="icon-trash"></i></a>


                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        </div>
        <!-- /HTML sourced data -->
    </div>
</div>

{% endblock %}



{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('global_assets/js/plugins/tables/datatables/datatables.min.js') }}"></script>

    <script src="{{ asset('global_assets/js/demo_pages/datatables_data_sources.js') }}"></script>
{% endblock %}
