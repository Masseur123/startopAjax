{% extends 'base.html.twig' %}

{% block title %}{{ 'page.title.meal'|trans([],'setting') }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block main_sidebar_user_menu %}{% endblock %}

{% block page_header_content_page_title %}
    <div class="page-title d-flex">
        <h3><i class="icon-arrow-left52 mr-2"></i> <span class="font-weight-bold">{{ 'meal'|trans([],'setting') }}</span></h3>
		<a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
    </div>
{% endblock %}

{% block page_header_content_header_elements_button %}
	<div class="header-elements d-none">
		<a href="{{ path('housing_meal') }}" class="btn btn-labeled btn-labeled-right bg-primary a-btn">{{ 'meal_list'|trans([],'setting')|upper }} <b><i class="icon-pin-alt ml-2"></i></b></a>
	</div>
{% endblock %}

{% block content %}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header bg-ligth text-dark header-elements-inline main-div-header">
                <h5 class="card-title"><span class="font-weight-bold">{{ 'form'|trans([],'base')|upper }}</span></h5>
            </div>
            <div class="card-body">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-5">
                        <div class="form-group">
                                <label>{{ 'name'|trans([],'housing') }}</label>
                                    {{ form_widget(form.name, {'attr':{'placeholder':"name" , 'class':"form-control"}}) }}
                                    <span class="text-danger"> {{ form_errors(form.name) }}</span>
                            </div>
                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label">{{ 'on_checkin'|trans([],'housing') }}</label>
                                <div class="col-lg-3">
                                    <div class="col-lg-9">
                                        <div class="form-check mb-0">
                                            <label class="form-check-label">
                                                {{ form_widget(form.on_checkin, {'attr':{'checked data-fouc':""}}) }}
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <label class="col-lg-3 col-form-label">{{ 'on checkout'|trans([],'housing') }}</label>
                                <div class="col-lg-3">
                                    <div class="col-lg-9">
                                        <div class="form-check mb-0">
                                            <label class="form-check-label">
                                                {{ form_widget(form.on_checkout, {'attr':{'checked data-fouc':""}}) }}
                                            </label>
                                        </div>
                                    </div>
                                </div> 
                                
                                <label class="col-lg-3 col-form-label mt-5">{{ 'on stay'|trans([],'housing') }}</label>
                                <div class="col-lg-3 mt-5">
                                    <div class="col-lg-9">
                                        <div class="form-check mb-0">
                                            <label class="form-check-label">
                                                {{ form_widget(form.on_stay, {'attr':{'checked data-fouc':""}}) }}
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <label class="col-lg-3 col-form-label mt-5">{{ 'mandatory'|trans([],'housing') }}</label>
                                <div class="col-lg-3 mt-5">
                                    <div class="col-lg-9">
                                        <div class="form-check mb-0">
                                            <label class="form-check-label">
                                                {{ form_widget(form.mandatory, {'attr':{'checked data-fouc':""}}) }}
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                </div>

                <div class="col-md-3">
                        <div class="form-group">
                                <label>{{ 'price'|trans([],'housing') }}</label>
                                    {{ form_widget(form.price, {'attr':{'placeholder':"price"}}) }}
                                <span class="text-danger"> {{ form_errors(form.price) }}</span>
                            </div>
                            <div class="form-group">
                                <label>{{ 'price_adult'|trans([],'housing') }}</label>
                                    {{ form_widget(form.price_adult, {'attr':{'placeholder':"price_adult"}}) }}
                                    <span class="text-danger"> {{ form_errors(form.price_adult) }}</span>
                            </div>
                            <div class="form-group">
                                    <label>{{ 'price_child'|trans([],'housing') }}</label>
                                        {{ form_widget(form.price_child, {'attr':{'placeholder':"price_child" , 'class':"form-control"}}) }}
                                        <span class="text-danger"> {{ form_errors(form.price_child) }}</span>
                            </div>
                </div>

                <div class="col-md-4">

                        <div class="form-group">
                                <label>{{ 'ordering'|trans([],'housing') }}</label>
                                 {{ form_widget(form.ordering, {'attr':{'placeholder':"ordering" , 'class':"form-control"}}) }}
                                 <span class="text-danger"> {{ form_errors(form.ordering) }}</span>
                            </div>
                       
                            <div class="form-group row">
                                <label class="col-lg-5 col-form-label">{{ 'daily_chargable'|trans([],'housing') }}</label>
                                <div class="col-lg-3">
                                    <div class="col-lg-9">
                                        <div class="form-check mb-0">
                                            <label class="form-check-label">
                                                {{ form_widget(form.daily_chargable, {'attr':{'checked data-fouc':""}}) }}
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                             
                </div>

            </div>
                    
                    

                    <div class="d-flex justify-content-between align-items-center">
                            <button class="btn btn-light" type="reset">
                                {{ 'cancel'|trans([],'base')|upper }}
                            </button>
                            <div>
                                {{ form_widget(form.saveAndCreateNew, {label: 'SAVE AND NEW', attr: {class: ' btn btn-primary form-btn-sn '}}) }}
                                <button class="btn btn-primary form-btn" type="submit">
                                    {{ 'save'|trans([],'base')|upper }}
                                    <i class="icon-paperplane ml-2"></i>
                                </button>
                            </div>
                    </div>
            {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}


{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('global_assets/js/plugins/forms/styling/uniform.min.js') }}"></script>

    <script src="{{ asset('global_assets/js/plugins/forms/styling/switchery.min.js') }}"></script>

    <script src="{{ asset('global_assets/js/plugins/forms/styling/switch.min.js') }}"></script>

    
    <script src="{{ asset('global_assets/js/plugins/forms/selects/select2.min.js') }}"></script>

    <script src="{{ asset('global_assets/js/demo_pages/form_select2.js') }}"></script>

     <script src="{{ asset('global_assets/js/demo_pages/form_checkboxes_radios.js') }}"></script>

    <script src="{{ asset('global_assets/js/demo_pages/form_layouts.js') }}"></script>

{% endblock %}
