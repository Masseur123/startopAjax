{% extends 'base.html.twig' %}

{% block title %}{{ 'page.title.pricing_plan'|trans([],'setting') }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block main_sidebar_user_menu %}{% endblock %}

{% block page_header_content_page_title %}
    <div class="page-title d-flex">
        <h3><i class="icon-arrow-left52 mr-2"></i> <span class="font-weight-bold">{{ 'pricing_plan'|trans([],'setting') }}</span></h3>
		<a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
    </div>
{% endblock %}

{% block page_header_content_header_elements_button %}
	<div class="header-elements d-none">
		<a href="{{ path('pricing_plan') }}" class="btn btn-labeled btn-labeled-right bg-primary a-btn">{{ 'pricingplan_list'|trans([],'setting')|upper }} <b><i class="icon-pin-alt ml-2"></i></b></a>
	</div>
{% endblock %}
{% block content %} 
<div class="row">
    <div class="col-md-5">
        <!-- Basic layout-->

        <div class="card">
            <div class="card-header bg-ligth text-dark header-elements-inline main-div-header">
                <h5 class="card-title"><span class="font-weight-bold">{{ 'form'|trans([],'base')|upper }}</span></h5>
            </div>

            <div class="card-body">
            {{ form_start(form) }}
                    
                    <div class="form-group">
                        <label>{{ 'name'|trans([],'housing') }}:</label>
                       
                            {{ form_widget(form.name, {'attr':{'placeholder':"Name" , 'class':"form-control"}}) }}
                            <span class="text-danger"> {{ form_errors(form.name) }}</span>
                    </div>
                    <div class="form-group">
                            <label>{{ 'reduction'|trans([],'housing') }}:</label>
                                {{ form_widget(form.reduction, {'attr':{'placeholder':"Reduction" , 'class':"form-control"}}) }}
                                <span class="text-danger"> {{ form_errors(form.reduction) }}</span>
                    </div>
                    <div class="form-group">
                            <label>{{ 'pricing'|trans([],'housing') }}:</label>
                                {{ form_widget(form.pricing) }}
                                <span class="text-danger"> {{ form_errors(form.pricing) }}</span>
                    </div>
                    <div class="form-group">
                            <label>{{ 'housing type'|trans([],'housing') }}:</label>
                                {{ form_widget(form.housingType) }}
                                <span class="text-danger"> {{ form_errors(form.housingType) }}</span>
                    </div>
                    <div class="form-group">
                            <label>{{ 'tags'|trans([],'housing') }}:</label>
                                {{ form_widget(form.tags) }}
                                <span class="text-danger"> {{ form_errors(form.tags) }}</span>
                    </div>
                    {#<div class="form-group">
                            <label>{{ 'tagPlan Config'|trans([],'housing') }}:</label>
                                {{ form_widget(form.tagPlanConfigurations) }}
                                <span class="text-danger"> {{ form_errors(form.tagPlanConfigurations) }}</span>
                    </div>#}

                    <div class="form-group">
                        <label>{{ 'description'|trans([],'housing') }}:</label>
                    
                            {{ form_widget(form.description) }}
                            <span class="text-danger"> {{ form_errors(form.description) }}</span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
						<button class="btn btn-light" type="reset">
							{{ 'cancel'|trans([],'base')|upper }}
						</button>
                        <div>
                            {{ form_widget(form.saveAndCreateNew, {label: 'SAVE AND NEW', attr: {class: ' btn btn-primary form-btn-sn '}}) }}
						    <button class="btn btn-primary form-btn" type="submit">
							    {{ 'save'|trans([],'base')|upper }}
							    <i class="icon-paperplane ml-2"></i>
						    </button>
                        </div>
					</div>
              
            {{ form_end(form) }}
            <!-- /basic layout -->
        </div>
    </div>
        </div>
    </div>

{% endblock %}


{% block javascripts %}
    {{ parent() }}
    
{% endblock %}
