{% extends 'base.html.twig' %}

{% block title %}{{ 'page.title.institution'|trans([],'security') }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block page_header_content_page_title %}
    <div class="page-title d-flex">
        <h3><i class="icon-arrow-left52 mr-2"></i> <span class="font-weight-bold">{{ 'institution'|trans([],'security') }}</span></h3>
		<a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
    </div>
{% endblock %}

{% block page_header_content_header_elements_button %}
	<div class="header-elements d-none">
		<a href="{{ path('institution') }}" class="btn btn-labeled btn-labeled-right bg-primary a-btn">{{ 'institution_list'|trans([],'security')|upper }} <b><i class="icon-pin-alt ml-2"></i></b></a>
	</div>
{% endblock %}

{% block content %}
<div class="row">
	<div class="col-md-12">
		<div class="card">
			<div class="card-header bg-ligth text-dark header-elements-inline main-div-header">
				<h5 class="card-title"><span class="font-weight-bold">{{ 'form'|trans([],'base')|upper }}</span></h5>
			</div>
			
			<!-- 2 columns form -->
			<div class="card-body">
				{{ form_start(form) }}
				<div class="row">
					<div class="col-md-4">
						<fieldset>
							<!-- <legend class="font-weight-semibold"><i class="icon-reading mr-2"></i> Personal</legend> -->
							<div class="form-group">
								<label>{{ 'business_type'|trans([],'security') }} <span class="text-danger">*</span></label>
								{{ form_widget(form.businessType) }}
								<span class="text-danger">{{ form_errors(form.businessType) }}</span>
							</div>
							<div class="form-group">
								<label>{{ 'cigle'|trans([],'security') }} <span class="text-danger">*</span></label>
								{{ form_widget(form.cigle) }}
							</div>
							<div class="form-group">
								<label>
									{{ 'name'|trans([],'security') }}
									<span class="text-danger">*</span>
								</label>
								{{ form_widget(form.name) }}
								<span class="text-danger">
									{{ form_errors(form.name) }}</span>
							</div>
							<div class="form-group">
								<label>
									{{ 'address'|trans([],'security') }}</label>
								{{ form_widget(form.address) }}
							</div>
						</fieldset>
					</div>
					<div class="col-md-4">
						<fieldset>
							<!-- <legend class="font-weight-semibold"><i class="icon-reading mr-2"></i> Contacts</legend> -->
							<div class="form-group">
								<label>
									{{ 'email'|trans([],'security') }}</label>
								{{ form_widget(form.email) }}
							</div>
							<div class="form-group">
								<div class="row">
									<div class="col-md-6">
										<label>
											{{ 'mobile'|trans([],'security') }}
											<span class="text-danger">*</span>
										</label>
										{{ form_widget(form.mobilephone) }}
										<span class="text-danger">
											{{ form_errors(form.mobilephone) }}</span>
									</div>
									<div class="col-md-6">
										<label>
											{{ 'fix'|trans([],'security') }}
										</label>
										{{ form_widget(form.fixphone) }}
									</div>
								</div>
							</div>
							<div class="form-group">
								<label>
									{{ 'po_box'|trans([],'security') }}</label>
								{{ form_widget(form.pobox) }}
							</div>
							<div class="form-group">
								<label>
									{{ 'town'|trans([],'security') }}</label>
								{{ form_widget(form.town) }}
							</div>
						</fieldset>
					</div>
					<div class="col-md-4">
						<fieldset>
							<!-- <legend class="font-weight-semibold"><i class="icon-reading mr-2"></i> Localization</legend> -->
							<div class="form-group">
								<label>
									{{ 'business_number'|trans([],'security') }}</label>
								{{ form_widget(form.businessnumber) }}
							</div>
							<div class="form-group">
								<label>
									{{ 'tax_payer_number'|trans([],'security') }}</label>
								{{ form_widget(form.taxpayernumber) }}
							</div>
							<div class="form-group">
								
							</div>
							<div class="form-group">
								<label>
									{{ 'website'|trans([],'security') }}</label>
								{{ form_widget(form.website) }}
							</div>
						</fieldset>
					</div>
				</div>
				<div class="d-flex justify-content-between align-items-center">
					<button class="btn btn-light" type="reset">
						{{ 'cancel'|trans([],'base')|upper }}
					</button>
					<div>
						{{ form_widget(form.saveAndCreateNew, {label: 'SAVE AND NEW', attr: {class: ' btn btn-primary form-btn-sn '}}) }}
						<button class="btn btn-primary form-btn" type="submit">
							{{ 'save'|trans([],'base')|upper }}
							<i class="icon-paperplane ml-2"></i>
						</button>
					</div>
					 
				</div>
				{{ form_end(form) }}
			</div>
			<!-- /2 columns form -->
		</div>
	</div>
</div>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
{% endblock %}
    