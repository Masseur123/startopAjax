{% extends 'base.html.twig' %}

{% block title %}{{ 'page.title.branch'|trans([],'security') }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block page_header_content_page_title %}
    <div class="page-title d-flex">
        <h3><i class="icon-arrow-left52 mr-2"></i> <span class="font-weight-bold">{{ 'branch'|trans([],'security') }}</span></h3>
		<a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
    </div>
{% endblock %}

{% block page_header_content_header_elements_button %}
	<div class="header-elements d-none">
		<a href="{{ path('branch_new') }}" class="btn btn-labeled btn-labeled-right bg-primary a-btn">{{ 'new'|trans([],'base')|upper }} <b><i class="icon-pin-alt ml-2"></i></b></a>
	</div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <!-- HTML sourced data -->
            <div class="card">
				
                <table class="table datatable-responsive table-bordered table-striped table-hover">
                    <thead class="bg-blue">
                        <tr>
                            <th>{{ 'code'|trans([],'security')|upper }}</th>
                            <th>{{ 'name'|trans([],'security')|upper }}</th>
                            <th>{{ 'address'|trans([],'security')|upper }}</th>
                            <th>{{ 'phone'|trans([],'security')|upper }}</th>
                            <th>{{ 'email'|trans([],'security')|upper }}</th>
                            <th>{{ 'institution'|trans([],'security')|upper }}</th>
                            <th class="text-center">{{ 'actions'|trans([],'base')|upper }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for branch in branches %}
                            <tr>
                                <td><span class="badge badge-flat border-success text-success font-size-xl">{{ branch.code }}</td>
                                <td>{{ branch.name }}</td>
                                <td>{{ branch.location }}</td>
                                <td>{{ branch.mobilephone }}</td>
                                <td>{{ branch.email}}</td>
                                <td>{{ branch.institution}}</td>
								<td class="text-center">
									<div class="list-icons">
										<a href="{{ path('branch_edit', {id:branch.id}) }}" data-popup="tooltip" title="{{ 'modify'|trans([],'base') }}" data-container="body" class="list-icons-item form-icon text-primary-600">
											<i class="icon-pencil7"></i>
										</a>
										<a href="{{ path('branch_delete', {id:branch.id}) }}" data-popup="tooltip" title="{{ 'delete'|trans([],'base') }}" data-container="body" onclick="return confirm('{{ 'please_confirm_your_action'|trans([],'base') }}')" class="list-icons-item text-danger-600">
											<i class="icon-trash"></i>
										</a>
									</div>
								</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            <!-- /HTML sourced data -->
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
