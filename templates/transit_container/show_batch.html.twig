{% extends 'base.html.twig' %}

{% block title %}{{ 'page.title.booking'|trans([],'transit') }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block page_header_content_page_title %}
    <div class="page-title d-flex">
        <h3><i class="icon-arrow-left52 mr-2"></i> <span class="font-weight-bold">{{ 'booking_list'|trans([],'transit') }}</span></h3>
		<a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
    </div>
{% endblock %}

{% block page_header_content_header_elements_button %}
	<div class="header-elements d-none">
		<a href="{{ path('batch_new') }}" class="btn btn-labeled btn-labeled-right bg-primary a-btn">{{ 'new'|trans([],'base')|upper }} <b><i class="icon-pin-alt ml-2"></i></b></a>
		<a href="{{ path('container') }}" class="btn btn-labeled btn-labeled-right bg-primary a-btn">{{ 'container_list'|trans([],'transit')|upper }} <b><i class="icon-pin-alt ml-2"></i></b></a>
	</div>
{% endblock %}

{% block content %}
        <div class="row">
               
            <div  class="col-md-12">
                <!-- HTML sourced data -->
                <div class="card">
                    <table class="table conrouting table-bordered table-striped table-hover">
                        <thead class="bg-blue">
                            <tr>
                                <th></th>
                                <th>{{ 'booking_number'|trans([],'transit')|upper }}</th>
                                <th>{{ 'shippingline'|trans([],'transit')|upper }}</th>
                                <th>{{ 'container_length'|trans([],'transit')|upper }}</th>
                                <th>{{ 'transit_number'|trans([],'transit')|upper }}</th>
                                <th class="text-center">{{ 'actions'|trans([],'base')|upper }}</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for batch in batchs %}
                                <tr>
                                    <td></td>
                                    <td><span class="badge badge-flat border-success text-success">{{ batch.reference }}</td>
                                    <td>{{ batch.shippingline.person.name }}</td>
                                    <td>{{ batch.containerlength.code }}</td>
                                    <td>{{ batch.transit.reference }}</td>
                                    <td class="text-center">
                                        <div class="list-icons">
                                            <a href="{{ path('container_generate', {id:batch.id}) }}" data-popup="tooltip" title="{{ 'generate'|trans([],'base') }}" data-container="body" class="list-icons-item form-icon text-primary-600">
                                                <i class="icon-eraser3"></i>
                                            </a>
                                            <a href="{{ path('batch_edit', {id:batch.id}) }}" data-popup="tooltip" title="{{ 'modify'|trans([],'base') }}" data-container="body" class="list-icons-item form-icon text-primary-600">
                                                <i class="icon-pencil7"></i>
                                            </a>
                                            <a href="{{ path('batch_delete', {id:batch.id}) }}" data-popup="tooltip" title="{{ 'delete'|trans([],'base') }}" data-container="body" onclick="return confirm('{{ 'please_confirm_your_action'|trans([],'base') }}')" class="list-icons-item form-icon text-danger-600">
                                                <i class="icon-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                <!-- /HTML sourced data -->
            </div>
        </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
