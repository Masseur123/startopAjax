{% extends 'base.html.twig' %}

{% block title %}{{ 'page.title.generate_container'|trans([],'transit') }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block page_header_content_page_title %}
    <div class="page-title d-flex">
        <h3><i class="icon-arrow-left52 mr-2"></i> <span class="font-weight-bold">{{ 'generate_container'|trans([],'transit') }}</span></h3>
		<a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
    </div>
{% endblock %}

{% block page_header_content_header_elements_button %}
	<div class="header-elements d-none">
		<a href="{{ path('container') }}" class="btn btn-labeled btn-labeled-right bg-primary a-btn">{{ 'container_list'|trans([],'transit')|upper }} <b><i class="icon-pin-alt ml-2"></i></b></a>
		<a href="{{ path('batch') }}" class="btn btn-labeled btn-labeled-right bg-primary a-btn">{{ 'booking_list'|trans([],'transit')|upper }} <b><i class="icon-pin-alt ml-2"></i></b></a>
	</div>
{% endblock %}

{% block content %}
     <div class="row">
        <div class="col-md-4">

            <div class="card">
                <div class="card-header bg-ligth text-dark header-elements-inline main-div-header">
					<h5 class="card-title"><span class="font-weight-bold">{{ 'form'|trans([],'base')|upper }}</span></h5>
				</div>

                <div class="card-body">
                    {{ form_start(form) }}
                    <div class="form-group">
                        <label>{{ 'number_to_generate'|trans([],'transit') }}
                        </label>
                        {{ form_widget(form.number, {'attr':{'placeholder':"number" , 'class':"form-control"}}) }}
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <button type="reset" class="btn btn-light">
                            {{ 'cancel'|trans([],'base')|upper }}
                        </button>
                        <button type="submit" class="btn btn-primary form-btn">
                            {{ 'generate'|trans([],'base')|upper }}
                            <i class="icon-paperplane ml-2"></i>
                        </button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>

        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
