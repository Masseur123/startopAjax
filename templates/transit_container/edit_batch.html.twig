{% extends 'base.html.twig' %}

{% block title %}{{ 'page.title.booking'|trans([],'transit') }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block page_header_content_page_title %}
    <div class="page-title d-flex">
        <h3><i class="icon-arrow-left52 mr-2"></i> <span class="font-weight-bold">{{ 'booking'|trans([],'transit') }}</span></h3>
		<a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
    </div>
{% endblock %}

{% block page_header_content_header_elements_button %}
	<div class="header-elements d-none">
		<a href="{{ path('batch') }}" class="btn btn-labeled btn-labeled-right bg-primary a-btn">{{ 'booking_list'|trans([],'transit')|upper }} <b><i class="icon-pin-alt ml-2"></i></b></a>
	</div>
{% endblock %}

{% block content %}
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-ligth text-dark header-elements-inline main-div-header">
                        <h5 class="card-title"><span class="font-weight-bold">{{ 'form'|trans([],'base')|upper }}</span></h5>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                        <div class="form-group">
                            <label>
                                {{ 'transit_file_number'|trans([],'transit') }}
                                <span class="text-danger">*</span>
                            </label>
                            {{ form_widget(form.transit) }}
                            <span class="text-danger">{{ form_errors(form.transit) }}</span>
                        </div>
                        <div class="form-group">
                            <label>
                                {{ 'container_length'|trans([],'transit') }}
                            </label>
                            {{ form_widget(form.containerlength) }}
                            <span class="text-danger">{{ form_errors(form.containerlength) }}</span>
                        </div>
                        <div class="form-group">
                            <label>
                                {{ 'shippingline'|trans([],'transit') }}
                                <span class="text-danger">*</span>
                            </label>
                            {{ form_widget(form.shippingline) }}
                            <span class="text-danger">{{ form_errors(form.shippingline) }}</span>
                        </div>
                        <div class="form-group">
                            <label>
                                {{ 'booking_number'|trans([],'transit') }}
                                <span class="text-danger">*</span>
                            </label>
                            {{ form_widget(form.reference) }}
                            <span class="text-danger">{{ form_errors(form.reference) }}</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <button class="btn btn-light" type="reset">
                                {{ 'cancel'|trans([],'base')|upper }}
                            </button>
                            </button>
                            <div>
                                {{ form_widget(form.saveAndCreateNew, {label: 'SAVE AND NEW', attr: {class: ' btn btn-primary form-btn-sn '}}) }}
                                <button class="btn btn-primary form-btn" type="submit">
                                    {{ 'save'|trans([],'base')|upper }}
                                    <i class="icon-paperplane ml-2"></i>
                                </button>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>            
        </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
