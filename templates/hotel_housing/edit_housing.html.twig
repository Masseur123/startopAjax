{% extends 'base.html.twig' %}


{% block title %}{{ 'page.title.housing'|trans([],'setting') }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block main_sidebar_user_menu %}{% endblock %}

{% block page_header_content_page_title %}
    <div class="page-title d-flex">
        <h3><i class="icon-arrow-left52 mr-2"></i> <span class="font-weight-bold">{{ 'housing'|trans([],'setting') }}</span></h3>
		<a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
    </div>
{% endblock %}

{% block page_header_content_header_elements_button %}
	<div class="header-elements d-none">
		<a href="{{ path('housing') }}" class="btn btn-labeled btn-labeled-right bg-primary a-btn">{{ 'housing_list'|trans([],'setting')|upper }} <b><i class="icon-pin-alt ml-2"></i></b></a>
	</div>
{% endblock %}

{% block content %}
    
	<div class="row">
		<div class="col-md-5">
			<!-- Basic layout-->
			{{ form_start(form) }}
			<div class="card form-header">
				<div class="card-header bg-blue text-white header-elements-inline form-header-back">
					<h6 class="card-title">
						{{ 'housing_form'|trans([],'housing')|upper }}</h6>
				</div>
				<div class="card-body">
                    <div class="form-group">
                        <label>
                            {{ 'housing type'|trans([],'housing') }}
                            <span class="text-danger">*</span>
                        </label>
                        {{ form_widget(form.housingtype) }}
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>
                                    {{ 'label'|trans([],'housing') }}
                                    <span class="text-danger">*</span>
                                </label>
                                {{ form_widget(form.label) }}
                                <span class="text-danger">
                                    {{ form_errors(form.label) }}</span>
                            </div>
                        </div>
                         <div class="col-md-6">
                            <div class="form-group">
                                    <label>
                                        {{ 'price'|trans([],'housing') }}
                                        <span class="text-danger">*</span>
                                    </label>
                                    {{ form_widget(form.price) }}
                                    <span class="text-danger">
                                        {{ form_errors(form.price) }}</span>
                            </div>
                        </div>
                    </div>
                     <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>
                                    {{ 'price child'|trans([],'housing') }}
                                    <span class="text-danger">*</span>
                                </label>
                                {{ form_widget(form.price_child) }}
                            </div>
                        </div>
                         <div class="col-md-6">
                            <div class="form-group">
                                <label>
                                    {{ 'price adult'|trans([],'housing') }}
                                    <span class="text-danger">*</span>
                                </label>
                                {{ form_widget(form.price_adult) }}
                            </div>
                        </div>
                    </div>
                        <div class="form-group">
                            <label>
                                {{ 'reservations'|trans([],'housing') }}
                                <span class="text-danger">*</span>
                            </label>
                            {{ form_widget(form.reservations) }}
                        </div>
                    
					<div class="d-flex justify-content-between align-items-center">
						<button class="btn btn-light" type="reset">
							{{ 'cancel'|trans([],'base')|upper }}
						</button>
                        <div>
                            {{ form_widget(form.saveAndCreateNew, {label: 'SAVE AND NEW', attr: {class: ' btn btn-primary form-btn-sn '}}) }}
						    <button class="btn btn-primary form-btn" type="submit">
							    {{ 'save'|trans([],'base')|upper }}
							    <i class="icon-paperplane ml-2"></i>
						    </button>
                        </div>
					</div>
				</div>
			</div>
			{{ form_end(form) }}
			<!-- /basic layout -->
		</div>
	</div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('global_assets/js/plugins/forms/styling/uniform.min.js') }}"></script>

    <script src="{{ asset('global_assets/js/plugins/forms/styling/switchery.min.js') }}"></script>

    <script src="{{ asset('global_assets/js/plugins/forms/styling/switch.min.js') }}"></script>

    
    <script src="{{ asset('global_assets/js/plugins/forms/selects/select2.min.js') }}"></script>

    <script src="{{ asset('global_assets/js/demo_pages/form_select2.js') }}"></script>

     <script src="{{ asset('global_assets/js/demo_pages/form_checkboxes_radios.js') }}"></script>

    <script src="{{ asset('global_assets/js/demo_pages/form_layouts.js') }}"></script>

{% endblock %}
