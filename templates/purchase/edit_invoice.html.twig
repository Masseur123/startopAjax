{% extends 'base.html.twig' %}

{% block title %}{{ 'invoice_list'|trans([],'purchase') }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block page_header_content_page_title %}
    <div class="page-title d-flex">
        <h3><i class="icon-arrow-left52 mr-2"></i> <span class="font-weight-bold">{{ 'invoice'|trans([],'purchase') }}</span></h3>
        <a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
    </div>
{% endblock %}

{% block page_header_content_header_elements_button %}
    <div class="header-elements d-none">
        <a href="{{ path('invoice') }}" class="btn btn-labeled btn-labeled-right bg-primary a-btn">{{ 'invoice_list'|trans([],'purchase')|upper }} <b><i class="icon-pin-alt ml-2"></i></b></a>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">

            <div class="card">
                <div class="card-header bg-ligth text-dark header-elements-inline main-div-header">
                    <h5 class="card-title"><span class="font-weight-bold">{{ 'form'|trans([],'base')|upper }}</span></h5>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}

                    <div class="row">
                        <div class="col-md-6">
                            <fieldset>

                                <div class="form-group" id="order">
                                    <label>{{ 'order'|trans([],'purchase') }} </label>
                                    {{ form_widget(form.ord) }}
                                </div>
                                <!-- <legend class="font-weight-semibold"><i class="icon-reading mr-2"></i> Personal</legend> -->

                                <div class="form-group">
                                    <label>{{ 'number'|trans([],'purchase') }}</label>
                                    {{ form_widget(form.reference) }}
                                </div>


                                <div class="form-group">
                                    <label>{{ 'reduction'|trans([],'purchase') }}</label>
                                    {{ form_widget(form.reduction) }}
                                </div>

                                <div class="form-group">
                                    <label>{{ 'amount tva'|trans([],'purchase') }}</label>
                                    {{ form_widget(form.amount_tva, {'attr':{'class':"form-control"}}) }}
                                </div>

                            </fieldset>
                        </div>

                        <div class="col-md-6">
                            <fieldset>
                                <!-- <legend class="font-weight-semibold"><i class="icon-reading mr-2"></i> Contacts</legend> -->

                                <div class="form-group" id="delevery">
                                    <label>{{ 'delevery'|trans([],'purchase') }} </label>
                                    {{ form_widget(form.delevery) }}
                                </div>

                                <div class="form-group">
                                    <label>{{ 'date'|trans([],'purchase') }} <span class="text-danger">*</span></label>
                                    <div>
                                        <div class="input-group">
                                <span class="input-group-prepend">
                                    <span class="input-group-text"><i class="icon-calendar3"></i></span>
                                </span>
                                            {{ form_widget(form.payAt, {'attr':{'class':"form-control", 'id':"anytime-month-numeric"}}) }}
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label>{{ 'discount'|trans([],'purchase') }}</label>
                                    {{ form_widget(form.discount) }}
                                </div>

                                <div class="form-group">
                                    <label>{{ 'payment delay'|trans([],'purchase') }}</label>
                                    {{ form_widget(form.payment_delay) }}
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <button class="btn btn-light" type="reset">
                                        {{ 'cancel'|trans([],'base')|upper }}
                                    </button>
                                    <div>
                                        {{ form_widget(form.saveAndCreateNew, {label: 'SAVE AND NEW', attr: {class: ' btn btn-primary form-btn-sn '}}) }}
                                        <button class="btn btn-primary form-btn" type="submit">
                                            {{ 'save'|trans([],'base')|upper }}
                                            <i class="icon-paperplane ml-2"></i>
                                        </button>
                                    </div>
                                </div>

                            </fieldset>
                        </div>

                        </div>

                    </div>

            </div>


            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}


{% block javascripts %}
    {{ parent() }}

    <script>
        $(document).ready(function(){
            $('#order').on('change', function(){
                if (this.value == 1)
                {
                    $('#delevery').show();
                }
                else {
                    $('#delevery').hide();
                }
            });

            $('#delevery').on('change', function(){
                if (this.value == 1)
                {
                    $('#order').show();
                }
                else {
                    $('#order').hide();
                }
            });

        });
    </script>

{% endblock %}