{% extends 'base.html.twig' %}

{% block title %}{{ 'page.title.transit_dashboard'|trans([],'dashboard') }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block page_header_content_header_elements %}{% endblock %}

{% block content %}
	
	<!-- Simple statistics -->
	
	<div class="mb-3">
		<h6 class="mb-0 font-weight-semibold">
			Total stats
		</h6>
		<span class="text-muted d-block">Showing total transit file and booking</span>
	</div> 

	<div class="row">
		<div class="col-sm-6 col-xl-3">
			<div class="card card-body bg-blue-400 has-bg-image">
				<div class="media">
					<div class="media-body">
						<h3 class="mb-0">{{ transitFileOpen }}</h3>
						<span class="text-uppercase font-size-xs">transit file open</span>
					</div>

					<div class="ml-3 align-self-center">
						<i class="icon-folder-open icon-3x opacity-75"></i>
					</div>
				</div>
			</div>
		</div>

		<div class="col-sm-6 col-xl-3">
			<div class="card card-body bg-danger-400 has-bg-image">
				<div class="media">
					<div class="media-body">
						<h3 class="mb-0">{{ transitFileClose }}</h3>
						<span class="text-uppercase font-size-xs">transit file close</span>
					</div>

					<div class="ml-3 align-self-center">
						<i class="icon-bag icon-3x opacity-75"></i>
					</div>
				</div>
			</div>
		</div>

		<!-- <div class="col-sm-6 col-xl-3">
			<div class="card card-body bg-success-400 has-bg-image">
				<div class="media">
					<div class="mr-3 align-self-center">
						<i class="icon-pointer icon-3x opacity-75"></i>
					</div>

					<div class="media-body text-right">
						<h3 class="mb-0">652,549</h3>
						<span class="text-uppercase font-size-xs">total clicks</span>
					</div>
				</div>
			</div>
		</div> -->

		<div class="col-sm-6 col-xl-3">
			<div class="card card-body bg-indigo-400 has-bg-image">
				<div class="media">
					<div class="mr-3 align-self-center">
						<i class="icon-enter6 icon-3x opacity-75"></i>
					</div>

					<div class="media-body text-right">
						<h3 class="mb-0">{{ totalBatch }}</h3>
						<span class="text-uppercase font-size-xs">total booking</span>
					</div>
				</div>
			</div>
		</div>
		
	</div>
	
	<!-- /simple statistics -->	
	
	<!-- Stats with progress -->
	
	<div class="mb-3 pt-2">
		<h6 class="mb-0 font-weight-semibold">
			Transit File
		</h6>
		<span class="text-muted d-block">Showing the last 4 in progress</span>
	</div> 
	
	<div class="row">
		{% for transitFile in fourLastTransitFiles %}
			<div class="col-sm-6 col-xl-3">

				<!-- Invitation stats white -->
				<div class="card text-center">
					<div class="card-body">
						<h6 class="font-weight-semibold mb-0 mt-1">{{ transitFile.reference }}</h6>
						<div class="text-muted mb-3">{{ transitFile.boat }}</div>
						<div class="svg-center position-relative mb-1" id="progress_percentage_one"></div>
					</div>

					<div class="card-body border-top-0 pt-0">
						<div class="row">
							<div class="col-4">
								<div class="text-uppercase font-size-xs text-muted">Booking</div>
								<h5 class="font-weight-semibold line-height-1 mt-1 mb-0">2,483</h5>
							</div>

							<div class="col-4">
								<div class="text-uppercase font-size-xs text-muted">Log</div>
								<h5 class="font-weight-semibold line-height-1 mt-1 mb-0">1,257</h5>
							</div>

							<div class="col-4">
								<div class="text-uppercase font-size-xs text-muted">Doc</div>
								<h5 class="font-weight-semibold line-height-1 mt-1 mb-0">8,472</h5>
							</div>
						</div>
					</div>
				</div>
				<!-- /invitation stats white -->

			</div>
		{% endfor %}
		
	</div>
	
	
	
			
