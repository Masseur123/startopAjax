{% extends 'base.html.twig' %}

{% block title %}
    {{ 'page.title.item_type'|trans([],'setting') }}
{% endblock %}

{% block breadcrumb %}
    <div class="breadcrumb-line breadcrumb-line-light header-elements-md-inline">
        <div class="d-flex">
            <div class="breadcrumb">
                <a href="{{ path('home') }}" class="breadcrumb-item">
                    <i class="icon-home2 mr-2"></i>
                    {{ 'dashboard'|trans([],'setting') }}</a>
                <span class="breadcrumb-item active">
                    {{ 'item_type'|trans([],'setting') }}</span>
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-md-4">
            <!-- Basic layout-->
            {{ form_start(form) }}
            <div class="card border-blue">
                <div class="card-header bg-blue text-white header-elements-inline">
                    <h5 class="card-title">{{ 'title.form'|trans([],'setting') }}</h5>
                </div>

                <div class="card-body">
                    <div class="form-group">
                        <label>{{ 'code'|trans([],'mass') }}</label>
                        {{ form_widget(form.code) }}
                        <span class="text-danger">{{ form_errors(form.code) }}</span>
                    </div>

                    <div class="form-group">
                        <label>{{ 'name'|trans([],'mass') }}
                            <span class="text-danger">*</span></label>
                        {{ form_widget(form.name) }}
                        <span class="text-danger">{{ form_errors(form.name) }}</span>
                    </div>

                    <div class="text-right">
                        <button type="submit" class="btn btn-primary">
                            {{ 'btn.save'|trans([],'global') }}
                            <i class="icon-paperplane ml-2"></i>
                        </button>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
            <!-- /basic layout -->
        </div>

        <div class="col-md-8">

            <!-- HTML sourced data -->
            <div class="card border-blue">
                <div class="card-header bg-blue text-white header-elements-inline">
                    <h5 class="card-title">{{ 'title.item_type_list'|trans([],'setting') }}</h5>
                </div>

                <div class="card-body">
                    <table class="table datatable-responsive table-bordered table-striped table-hover">
                        <thead>
                            <tr>
                                <th>{{ '#'|trans([],'setting') }}</th>
                                <th>{{ 'th.code'|trans([],'setting') }}</th>
                                <th>{{ 'th.name'|trans([],'setting') }}</th>
                                <th></th>
                                <th></th>
                                <th class="text-center">{{ 'th.actions'|trans([],'setting') }}</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for item_type in itemTypes %}
                                <tr>
                                    <td>{{ item_type.id }}</td>
                                    <td>{{ item_type.code }}</td>
                                    <td>{{ item_type.name }}</td>
                                    <td></td>
                                    <td></td>
                                    <td class="text-center">
                                        <div class="list-icons">
                                            <a href="{{ path('item_type_edit', {id:item_type.id}) }}" data-popup="tooltip-custom" title="Modify" data-placement="left" id="left" class="list-icons-item text-primary-600">
                                                <i class="icon-pencil7"></i>
                                            </a>
                                            <a href="{{ path('item_type_delete', {id:item_type.id}) }}" data-popup="tooltip-custom" title="Delete" data-placement="top" onclick="return confirm('are u sure?')" class="list-icons-item text-danger-600">
                                                <i class="icon-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /HTML sourced data -->

        </div>

    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('global_assets/js/plugins/forms/styling/uniform.min.js') }}"></script>
    <script src="{{ asset('global_assets/js/demo_pages/form_layouts.js') }}"></script>

    <script src="{{ asset('global_assets/js/plugins/tables/datatables/datatables.min.js') }}"></script>
    <script src="{{ asset('global_assets/js/plugins/forms/selects/select2.min.js') }}"></script>

    <script src="{{ asset('global_assets/js/plugins/tables/datatables/extensions/responsive.min.js') }}"></script>

    <script src="{{ asset('global_assets/js/demo_pages/datatables_responsive.js') }}"></script>

    <script src="{{ asset('global_assets/js/demo_pages/components_popups.js') }}"></script>
{% endblock %}