{% extends 'base.html.twig' %}

{% block title %}
    {{ 'page.title.fee_type'|trans([],'setting') }}
{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-md-5">
            <!-- Basic layout-->
            {{ form_start(form) }}
            <div class="card border-blue">
                <div class="card-header bg-blue text-white header-elements-inline">
                    <h5 class="card-title">{{ 'title.form'|trans([],'pawc') }}</h5>
                </div>

                <div class="card-body">

                    <div class="form-group row">
                        <label class="col-lg-3 col-form-label">{{ 'lable.code'|trans([],'pawc') }}:</label>
                        <div class="col-lg-9">
                            {{ form_widget(form.code, {'attr':{'class':"form-control"}}) }}
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-lg-3 col-form-label">{{ 'label.name'|trans([],'pawc') }}:</label>
                        <div class="col-lg-9">
                            {{ form_widget(form.name, {'attr':{'class':"form-control"}}) }}
                        </div>
                    </div>

                    <div class="text-right">
                        <button type="submit" class="btn btn-primary">
                            {{ 'save'|trans([],'pawc') }}
                            <i class="icon-paperplane ml-2"></i>
                        </button>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
            <!-- /basic layout -->
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('global_assets/js/plugins/extensions/jquery_ui/interactions.min.js') }}"></script>

    <script src="{{ asset('global_assets/js/plugins/forms/styling/uniform.min.js') }}"></script>

    <script src="{{ asset('global_assets/js/plugins/forms/selects/select2.min.js') }}"></script>

    <script src="{{ asset('global_assets/js/demo_pages/form_select2.js') }}"></script>

    <script src="{{ asset('global_assets/js/demo_pages/form_layouts.js') }}"></script>

{% endblock %}