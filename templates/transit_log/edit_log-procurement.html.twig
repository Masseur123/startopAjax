{% extends 'base.html.twig' %}

{% block title %}{{ 'page.title.log_procurement'|trans([],'transit') }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block page_header_content_page_title %}
    <div class="page-title d-flex">
        <h3><i class="icon-arrow-left52 mr-2"></i> <span class="font-weight-bold">{{ 'log_procurement'|trans([],'transit') }}</span></h3>
		<a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
    </div>
{% endblock %}

{% block page_header_content_header_elements_button %}
	<div class="header-elements d-none">
		<a href="{{ path('log_procurement') }}" class="btn btn-labeled btn-labeled-right bg-primary a-btn">{{ 'log_procurement_list'|trans([],'transit')|upper }} <b><i class="icon-pin-alt ml-2"></i></b></a>
	</div>
{% endblock %}

{% block content %}
   <div class="row">
        <div class="col-md-12">

            <div class="card">
                <div class="card-header bg-ligth text-dark header-elements-inline main-div-header">
					<h5 class="card-title"><span class="font-weight-bold">{{ 'form'|trans([],'base')|upper }}</span></h5>
					<div class="header-elements">
                        <div class="list-icons">
                            <a class="list-icons-item" data-action="collapse"></a>
                        </div>
                    </div>
				</div>

                <div class="card-body">
                    {{ form_start(form) }}

                    <div class="row">

                        <div class="col-md-6">
                            <div class="form-group">
                                <label>{{ 'reference'|trans([],'transit') }} <span class="text-danger">*</span></label>
                                {{ form_widget(form.reference) }}
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label>{{ 'consignment_note'|trans([],'transit') }}</label>
                                {{ form_widget(form.consignment_note) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>{{ 'source'|trans([],'transit') }}
                                    <span class="text-danger">*</span></label>
                                {{ form_widget(form.source) }}
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label>{{ 'destination'|trans([],'transit') }}
                                    <span class="text-danger">*</span></label>
                                {{ form_widget(form.destination) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>{{ 'quantity'|trans([],'transit') }}
                                    <span class="text-danger">*</span></label>
                                {{ form_widget(form.quantity) }}
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label>{{ 'volume'|trans([],'transit') }}
                                    <span class="text-danger">*</span></label>
                                {{ form_widget(form.volume) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>{{ 'date'|trans([],'transit') }}
                                    <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="icon-calendar3"></i>
                                        </span>
                                    </span>
                                    {{ form_widget(form.byingAt) }}
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label>{{ 'wood'|trans([],'transit') }}
                                    <span class="text-danger">*</span></label>
                                {{ form_widget(form.wood) }}
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <button type="reset" class="btn btn-light">
                            {{ 'cancel'|trans([],'base')|upper }}
                        </button>
                        </button>
						<div>
							{{ form_widget(form.saveAndCreateNew, {label: 'SAVE AND NEW', attr: {class: ' btn btn-primary form-btn-sn '}}) }}
							<button class="btn btn-primary form-btn" type="submit">
								{{ 'save'|trans([],'base')|upper }}
								<i class="icon-paperplane ml-2"></i>
							</button>
						</div>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>

        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
