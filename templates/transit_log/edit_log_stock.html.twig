{% extends 'base.html.twig' %}

{% block title %}{{ 'page.title.stock_wood'|trans([],'transit') }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block page_header_content_page_title %}
    <div class="page-title d-flex">
        <h3><i class="icon-arrow-left52 mr-2"></i> <span class="font-weight-bold">{{ 'stock_wood'|trans([],'transit') }}</span></h3>
		<a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
    </div>
{% endblock %}

{% block page_header_content_header_elements_button %}
	<div class="header-elements d-none">
		<a href="{{ path('stock_log') }}" class="btn btn-labeled btn-labeled-right bg-primary a-btn">{{ 'stock_list'|trans([],'transit')|upper }} <b><i class="icon-pin-alt ml-2"></i></b></a>
	</div>
{% endblock %}

{% block content %}
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header bg-ligth text-dark header-elements-inline main-div-header">
                        <h5 class="card-title"><span class="font-weight-bold">{{ 'form'|trans([],'base')|upper }}</span></h5>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
						<div class="row">
							<div class="col-md-4">
								<div class="form-group">
									<label>
										{{ 'wood'|trans([],'transit') }} <span class="text-danger">*</span>
									</label>
									<input type="text" value={{ logProcurement.wood.name }} disabled class="form-control">
								</div>
							</div>
							<div class="col-md-4">
								<div class="form-group">
									<label>
										{{ 'quantity'|trans([],'transit') }} <span class="text-danger">*</span>
									</label>
									{{ form_widget(form.quantity) }}
								</div>
							</div>
							<div class="col-md-4">
								<div class="form-group">
									<label>
										{{ 'volume'|trans([],'transit') }}
									</label>
									{{ form_widget(form.volume) }}
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-md-4">
								<div class="form-group">
									<label>{{ 'date'|trans([],'transit') }} <span class="text-danger">*</span></label>
									<div class="input-group">
										<span class="input-group-prepend">
											<span class="input-group-text">
												<i class="icon-calendar3"></i>
											</span>
										</span>
										{{ form_widget(form.stockAt) }}
									</div>
								</div>
							</div>
							<div class="col-md-4">
								<div class="form-group">
									<label>
										{{ 'park'|trans([],'transit') }}
									</label>
									{{ form_widget(form.park) }}
								</div>
							</div>
							<div class="col-md-4">
								<div class="form-group">
									<label>
										{{ 'remark'|trans([],'transit') }}
									</label>
									{{ form_widget(form.note) }}
								</div>
							</div>
						</div>
                        
                        <div class="d-flex justify-content-between align-items-center">
                            <button class="btn btn-light" type="reset">
                                {{ 'cancel'|trans([],'base')|upper }}
                            </button>
							
							<button class="btn btn-primary form-btn" type="submit">
								{{ 'save'|trans([],'base')|upper }}
								<i class="icon-paperplane ml-2"></i>
							</button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>            
        </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
