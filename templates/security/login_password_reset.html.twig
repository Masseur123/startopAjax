{% extends 'base.html.twig' %}

{% block title %}{{ 'login_password_reset'|trans([],'security') }}{% endblock %}

{% block body_class %}{{ 'bg-slate-800' }}{% endblock %}

{% block main_navbar %}{% endblock %}

{% block main_sidebar %}{% endblock %}

{% block main_content %}

	<!-- Content area -->
	<div class="content d-flex justify-content-center align-items-center">

		<!-- Password recovery form
		<form class="login-password-reset-form" action="{{ path('login_password_reset') }}" method="post"> -->
		{{ form_start(form) }}
			<div class="card mb-0">

				<div class="card-body">
					<div class="text-center mb-3">
						<i class="icon-spinner11 icon-2x text-warning border-warning border-3 rounded-round p-3 mb-3 mt-1"></i>
						<h5 class="mb-0">{{ 'reset_password'|trans([],'security') }}</h5>

						<span class="d-block text-muted"><!-- We'll send you instructions in email --></span>
					</div>

					<div class="form-group form-group-feedback form-group-feedback-right">
						<!-- <input type="text" class="form-control" placeholder="{{ 'username'|trans([],'security') }}" id="username" name="username"> -->
						{{ form_widget(form.username, {attr: {placeholder: 'username', class: ' form-control '}}) }}
						<div class="form-control-feedback">
							<!-- <i class="icon-mail5 text-muted"></i> -->
							<i class="icon-user text-muted"></i>
						</div>
					</div>

					<div class="form-group d-flex align-items-center">
						<div class="form-check mb-0"></div>

						<a href="{{ path('starTop_login') }}" class="ml-auto login-startop">{{ 'back_to_login_page'|trans([],'security') }}?</a>
					</div>

					<button type="submit" class="btn bg-blue btn-block"><i class="icon-spinner11 mr-2"></i> {{ 'reset_password'|trans([],'security') }}</button>
				</div>
			</div>
		{{ form_end(form) }}
		<!-- </form>
		/password recovery form -->

	</div>
	<!-- /content area -->

{% endblock %}

