{% extends 'base.html.twig' %}

{% block title %}{{ 'page.title.budget_incomes'|trans([],'budget') }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block page_header_content_page_title %}
    <div class="page-title d-flex">
        <h3><i class="icon-arrow-left52 mr-2"></i> <span class="font-weight-bold">{{ 'budget_incomes'|trans([],'budget') }}</span></h3>
		<a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
    </div>
{% endblock %}

{% block page_header_content_header_elements_button %}
	<div class="header-elements d-none">
		<a href="{{ path('income') }}" class="btn btn-labeled btn-labeled-right bg-primary a-btn">{{ 'budget_incomes_list'|trans([],'budget')|upper }} <b><i class="icon-pin-alt ml-2"></i></b></a>
	</div>
{% endblock %}

{% block content %}
    
	<div class="row">
		<div class="col-md-12">
			<!-- Basic layout-->
			{{ form_start(form) }}
			<div class="card form-header">
				<div class="card-header bg-ligth text-dark header-elements-inline main-div-header">
					<h5 class="card-title"><span class="font-weight-bold">{{ 'form'|trans([],'base')|upper }}</span></h5>
				</div>
				<div class="card-body">
                    {{ form_start(form) }}
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>
                                        {{ 'cost_center'|trans([],'budget') }}
                                        <span class="text-danger">*</span>
                                    </label>
                                    {{ form_widget(form.costcenter) }}
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>
                                        {{ 'tva'|trans([],'budget') }}
                                    </label>
                                    {{ form_widget(form.tax) }}
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>
                                        {{ 'date'|trans([],'transit') }}
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="icon-calendar3"></i>
                                            </span>
                                        </span>
                                        {{ form_widget(form.doingAt) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>
                                        {{ 'amount'|trans([],'budget') }}
                                        <span class="text-danger">*</span>
                                    </label>
                                    {{ form_widget(form.amount) }}
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>
                                        {{ 'tva_amount'|trans([],'budget') }}
                                        <span class="text-danger">*</span>
                                    </label>
                                    {{ form_widget(form.taxamount) }}
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3 mb-md-2">
                                    <label class="d-block font-weight-semibold"></label>
                                    <div class="form-check form-check-inline form-check-right">
                                        <label class="form-check-label">
                                            {{ 'cash_collection'|trans([],'budget') }}
                                            {{ form_widget(form.cashpay) }}
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>
                                        {{ 'description'|trans([],'budget') }}
                                        <span class="text-danger">*</span>
                                    </label>
                                    {{ form_widget(form.description) }}
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>
                                        {{ 'reference'|trans([],'budget') }}
                                    </label>
                                    {{ form_widget(form.refNumber) }}
                                </div>
                            </div>
                            <div class="col-md-4"></div>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <button class="btn btn-light" type="reset">
                                {{ 'cancel'|trans([],'base')|upper }}
                            </button>
                            <div>
                                {{ form_widget(form.saveAndCreateNew, {label: 'SAVE AND NEW', attr: {class: ' btn btn-primary form-btn-sn '}}) }}
                                <button class="btn btn-primary form-btn" type="submit">
                                    {{ 'save'|trans([],'base')|upper }}
                                    <i class="icon-paperplane ml-2"></i>
                                </button>
                            </div>
                        </div>
                    {{ form_end(form) }}
                </div>
			<!-- /basic layout -->
		</div>

	</div>
    {% endblock %}
    {% block javascripts %}
        {{ parent() }}
        <script src="{{ asset('global_assets/js/plugins/extensions/jquery_ui/interactions.min.js') }}"></script>
        <script src="{{ asset('global_assets/js/plugins/forms/styling/switchery.min.js') }}"></script>
        <script src="{{ asset('global_assets/js/plugins/forms/styling/switch.min.js') }}"></script>
        <script src="{{ asset('global_assets/js/demo_pages/form_checkboxes_radios.js') }}"></script>
    {% endblock %}
